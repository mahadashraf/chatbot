# Required environment variables for SaunaBot 5000
# Copy this file to .env and fill in your actual values

# Your Shopify store domain (without protocol)
STORE_DOMAIN=your-shop-name.myshopify.com

# Your OpenAI API key (required for chat functionality)
OPENAI_API_KEY=your-openai-api-key-here

# Server port (default: 3000)
PORT=3000

# OpenAI model to use (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# CORS allowed origins (default: all origins for development)
ALLOWED_ORIGINS=*

# Optional: OpenAI fallback models
OPENAI_FALLBACK_MODELS=gpt-4o,gpt-4o-mini-2024-07-18

# Optional: Logging directory
LOG_DIR=logs

# Optional: Bulk ingest settings
INGEST_CONCURRENCY=50
INGEST_TIMEOUT_MS=20000
INGEST_RETRIES=2
INGEST_BATCH_DELAY_MS=200
